{
  "family": "svc-${IMAGE_NAME}",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/svc-${IMAGE_NAME}-ecs-execution-role",
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${IMAGE_NAME}",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 3000,
          "protocol": "tcp",
          "containerPort": 3000
        }
      ],
      "cpu": 0,
      "image": "${AWS_ACCOUNT}.dkr.ecr.us-east-1.amazonaws.com/${IMAGE_NAME}:${BUILDID}",
      "essential": true,
      "name": "${IMAGE_NAME}"
    }
  ],
  "placementConstraints": [],
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT}:role/svc-${IMAGE_NAME}-ecs-task-role",
  "requiresCompatibilities": ["FARGATE"],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "memory": "${TASK_MEMORY}",
  "cpu": "${TASK_CPU}"
}
