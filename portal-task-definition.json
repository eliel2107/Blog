{
	"family": "${TASK_FAMILY}",
	"networkMode": "awsvpc",
	"executionRoleArn": "${TASK_ROLE}",
	"containerDefinitions": [
		{
			"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-group": "/ecs/${TASK_FAMILY}",
					"awslogs-region": "us-east-1",
					"awslogs-stream-prefix": "ecs"
				}
			},
			"portMappings": [
				{
					"hostPort": 80,
					"protocol": "tcp",
					"containerPort": 80
				},
				{
					"hostPort": 443,
					"protocol": "tcp",
					"containerPort": 443
				},
				{
					"hostPort": 3000,
					"protocol": "tcp",
					"containerPort": 3000
				}
			],
			"cpu": 0,
			"environment": [
				{
					"name": "site",
					"value": ""
					
				}
			],
			"image": "${AWS_ECR_IMAGE}",
			"essential": true,
			"name": "${CONTAINER_NAME}"
		}
	],
	"placementConstraints": [],
	"taskRoleArn": "${TASK_ROLE}",
	"requiresCompatibilities": [
		"FARGATE"
	],
	"runtimePlatform": {
		"operatingSystemFamily": "LINUX"
	},
	"memory": "${TASK_MEMORY}",
	"cpu": "${TASK_CPU}"
}