{
  "family": "${TASK_FAMILY}",
  "networkMode": "awsvpc",
  "executionRoleArn": "${TASK_ROLE}",
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/${TASK_FAMILY}",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "secrets": [
          {
              "name": "EMAIL_PASSWORD",
              "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT}:secret:svc-dev-lw-site-service:EMAIL_PASSWORD::"
          },
          {
              "name": "EMAIL_USERNAME",
              "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT}:secret:svc-dev-lw-site-service:EMAIL_USERNAME::"
          },
          {
              "name": "NEXT_PUBLIC_CONTENTFUL_ACCESS_TOKEN",
              "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT}:secret:svc-dev-lw-site-service:NEXT_PUBLIC_CONTENTFUL_ACCESS_TOKEN::"
          },
          {
              "name": "NEXT_PUBLIC_CONTENTFUL_SPACE_ID",
              "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT}:secret:svc-dev-lw-site-service:NEXT_PUBLIC_CONTENTFUL_SPACE_ID::"
          }
      ],
      "portMappings": [
        {
          "hostPort": 3000,
          "protocol": "tcp",
          "containerPort": 3000
        }
      ],
      "cpu": 0,
      "environment": [
        {
          "name": "site",
          "value": ""
        }
      ],
      "image": "${AWS_ECR_IMAGE}",
      "essential": true,
      "name": "${CONTAINER_NAME}"
    }
  ],
  "placementConstraints": [],
  "taskRoleArn": "${TASK_ROLE}",
  "requiresCompatibilities": ["FARGATE"],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "memory": "${TASK_MEMORY}",
  "cpu": "${TASK_CPU}"
}
